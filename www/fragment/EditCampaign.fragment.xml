<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Edit Campaign"
        class="sapUiContentPadding">
        <content>
            <Label text="Campaign Name" />
            <Input value="{CampaignName}" />
            <Label text="Description" />
            <Input value="{Description}" />
        </content>
        <beginButton>
            <Button type="Accept"
                    text="Save"
                    icon="sap-icon://save"
                    press="onSaveCampaign" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
