    <mvc:View
        height="100%"
        controllerName="hs.fulda.customer.management.controller.CustomerDetail"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
	    xmlns:form="sap.ui.layout.form"
        xmlns:blockcolor="sap.uxap.sample.ObjectPageFormLayout.block.blockscolor"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core">
        <Page id="pageShowCustomerDetail"
                  title="{i18n>customerDetailHeaderTitle}"
                  showNavButton="true"
                  navButtonPress="onNavBack"
                  class="sapUiContentPadding" >
            <ObjectHeader
            id="objHeaderCustomerDetail"
            responsive="true"
            icon=""
            iconAlt="Test"
            intro=""
            title="{CustomerName}"
            showMarkers="false"
            markFlagged="true"
            markFavorite="true"
            backgroundDesign="Translucent">
                <attributes>
                    <ObjectAttribute
                        title="{CustomerName}"
                        text="{Company}"/>
                    <ObjectAttribute
                        title="Dimension per unit"
                        text="Width x Depth x Height"/>
                </attributes>
                <statuses>
                    <ObjectStatus
                        title="Approval"
                        text="Pending"
                        state="Warning"/>
                </statuses>
            </ObjectHeader>
        </Page>
    </mvc:View>
