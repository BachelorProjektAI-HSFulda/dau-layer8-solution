    <mvc:View
        height="100%"
        controllerName="hs.fulda.customer.management.controller.CustomerDetail"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
	    xmlns:form="sap.ui.layout.form"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core">
         <Page id="pageShowCustomerDetails"
                  title="Customer Details"
                  class="sapUiContentPadding" >
                <headerContent>
                    <Button
                        icon="sap-icon://settings"
                        press="handleSettingsPressed" />
                        <Button
                        icon="sap-icon://add"
                        press="onTest" />
                </headerContent>
                <l:VerticalLayout width="100%" >
                    <l:content>
                        <List id="customerDetailList" headerText="Customer Detail" items="{}">
                            <headerToolbar>
                                <Toolbar>
                                    <Title text="Products" level="H2" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add" press="onEditCustomerDetail" >
                                        <customData>
                                            <core:CustomData
                                                key="target"
                                                value="pageAddCampaign" />
                                        </customData>
			                        </Button>
                                </Toolbar>
		                    </headerToolbar>
                            <items>
                            <StandardListItem
                                 title="{CustomerName}"
                                 description="{Company}"
                                 type="Navigation" />
                            </items>
                        </List>
                 </l:content>
                 </l:VerticalLayout>
                 <footer>
                    <Toolbar>
                        <content>

                        </content>
                    </Toolbar>
                 </footer>
            </Page>
    </mvc:View>
